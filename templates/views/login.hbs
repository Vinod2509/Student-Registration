<!DOCTYPE html>

<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title>nith-semreg</title>
    <link rel="stylesheet" href="/styles/login.css">
  </head>
  <body>
    <div class="center">
      <h1>Login</h1>
      <form method="post">
        <div class="txt_field">
          <input id="username-el"type="text" required>
          <span></span>
          <label>Username</label>
        </div>
        <div class="txt_field">
          <input id="password-el" type="password" required>
          <span></span>
          <label>Password</label>
        </div>
         
        <td><div class="pass">Forgot Password?</div></td>
       
        
        <div class="signup_link">
          <select class="signup_link" aria-label="Default select example">
       
            <option Selected id="role" value="1">Student</option>
            <option value="2">Faculty</option>
            <option value="3">Admin</option>
         </select>
       </div>
       
        <input type="submit" value="Login">
        <div class="signup_link">
          Not a member? <a href="http://localhost:80/otp">Signup</a>
        </div>
      </form>
    </div>
    <script src="/js/login.js"></script>

  </body>
</html>