<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <title>Add Course</title>
  <link rel="stylesheet" type="text/css" href="/styles/courses.css">
</head>
<body>
  <h1>Add Course</h1>
  <form>
    <label for="thours">Total Hours:</label>
    <input type="number" id="thours" name="thours" required>

    <label for="tcredits">Total Credits:</label>
    <input type="number" id="tcredits" name="tcredits" required>

    <label for="branch">Branch:</label>
    <input type="text" id="branch" name="branch" required>

    <label for="sem">Semester:</label>
    <input type="number" id="sem" name="sem" required>

    <fieldset>
      <legend>Courses:</legend>
      <div id="courses"></div>
      <button type="button" id="addCourse">Add Course</button>
    </fieldset>

    <button type="submit">Submit</button>
  </form>

  <script src="/js/couses.js"></script>
</body>
</html>
